<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="@string/app_name"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/mainactual" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginRight="65dp"
        android:contentDescription="@string/abc_action_mode_done"
        android:src="@drawable/button_on_g" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_marginRight="14dp"
        android:contentDescription="@string/abc_action_mode_done"
        android:src="@drawable/button_off_w" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="80dp"
        android:layout_toLeftOf="@+id/imageButton2"
        android:contentDescription="@string/abc_action_mode_done"
        android:src="@drawable/button_status_w" />

    <ImageButton
        android:id="@+id/ImageButton01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton2"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/imageButton2"
        android:contentDescription="@string/abc_action_mode_done"
        android:src="@drawable/button_status_w" />

    <ImageButton
        android:id="@+id/ImageButton02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignTop="@+id/ImageButton01"
        android:contentDescription="@string/abc_action_mode_done"
        android:src="@drawable/button_on_g" />

    <ImageButton
        android:id="@+id/ImageButton03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignTop="@+id/ImageButton02"
        android:contentDescription="@string/abc_action_mode_done"
        android:src="@drawable/button_off_w" />

    <ImageButton
        android:id="@+id/ImageButton06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImageButton01"
        android:layout_below="@+id/ImageButton01"
        android:layout_marginTop="58dp"
        android:contentDescription="@string/abc_action_mode_done"
        android:src="@drawable/button_status_w" />

    <ImageButton
        android:id="@+id/ImageButton04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImageButton02"
        android:layout_alignTop="@+id/ImageButton06"
        android:contentDescription="@string/abc_action_mode_done"
        android:src="@drawable/button_on_g" />

    <ImageButton
        android:id="@+id/ImageButton05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImageButton03"
        android:layout_alignTop="@+id/ImageButton04"
        android:contentDescription="@string/abc_action_mode_done"
        android:src="@drawable/button_off_w" />

    <ImageButton
        android:id="@+id/ImageButton07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ImageButton05"
        android:layout_below="@+id/ImageButton04"
        android:layout_marginTop="14dp"
        android:contentDescription="@string/abc_action_mode_done"
        android:src="@drawable/button_status_w" />

    <ImageButton
        android:id="@+id/ImageButton09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ImageButton07"
        android:layout_alignTop="@+id/ImageButton08"
        android:contentDescription="@string/abc_action_mode_done"
        android:src="@drawable/button_no_g" />

    <ImageButton
        android:id="@+id/ImageButton08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImageButton04"
        android:layout_below="@+id/ImageButton07"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/abc_action_mode_done"
        android:src="@drawable/button_yes_w" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <fragment
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/abc_action_mode_done"
        android:src="@drawable/mic" 
        android:tag="wit_fragment"/>

</RelativeLayout>